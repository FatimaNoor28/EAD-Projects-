@*tag helper*@
@model List<eadProject.Models.Appointment>

@{
    ViewData["Title"] = "Appointment";
}
<section id="appointment" class="appointment section-bg">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
            <h3 class="text-center text-red pt-5">@ViewData["Appointment"]</h3>

            <div class="section-title">
            <h2>Coming Appointments </h2>
                <div class="row">
                    @if(Model!=null){
                        
                    
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Appointment #</th>
                                <th scope="col">Appointment Id</th>
                                <th scope="col">Appointment Date</th>
                                @*<th scope="col">Handle</th>*@
                            </tr>
                        </thead>
                        @foreach (Appointment a in Model)
                        {
                            int i = 1;
                            <tbody>
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@a.AppointmentId</td>
                                    @*<td>Otto</td>*@
                                    <td>@a.Date</td>
                                </tr>
                            </tbody>
                        }

                    </table>
                    }
                </div>
            
        </div>
     </div>
</section>

<!-- Appointment -->
<section id="appointment" class="appointment section-bg">
    <div class="container">
        <div class="section-title">
            <h2>Make an Appointment</h2>
            <p>The most valuable thing is your health. So, don't be indifferent towards your health. When it comes to our health, a good healthcare plan is very important for all individuals. So, make an appointment now.</p>
        </div>
        <form method="post" action="/Patient/MakeAppointment">
            <div class="row">
                <!-- Name -->
                <div class="col-md-4 form-group">
                        <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" title="Please enter at least 4 chars" required>
                </div>
               @* <!-- CNIC -->
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <input type="text" pattern="^[0-9]{5}-[0-9]{7}-[0-9]{1}$" class="form-control" title="Type your CNIC like 12345-1234567-1" name="CNIC" id="CNIC" placeholder="Your CNIC" required>
                    <!-- data-msg="Please enter a valid email" -->
                    <!-- data-rule="email" -->
                    <!-- <div class="validate"></div> -->
                </div>*@
                <!-- Phone -->
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <input type="tel" class="form-control" name="phone" id="phone" placeholder="Your Phone" pattern="[0-9]{4}-[0-9]{7}" title="Type your phone number like 0312-1234567">
                    <!-- <div class="validate"></div> -->
                </div>
            </div>
            <div class="row">
                <!-- Date -->
                <div class="col-md-4 form-group mt-3">
                        <input type="datetime" name="date" required pattern="[0-9]{2}" class="form-control datepicker" id="date" placeholder="Appointment Date (dd)">
                    <!-- <div class="validate"></div> -->
                </div>
                    <div class="col-md-4 form-group mt-3">
                        <input type="datetime" name="month" required pattern="[0-9]{2}" class="form-control datepicker" id="month" placeholder="Appointment Month (mm)">
                        <!-- <div class="validate"></div> -->
                    </div>

                @*<!-- department -->
                <div class="col-md-4 form-group mt-3">
                    <select name="department" id="department" class="form-select">
                        <option value="">Select Department</option>
                        <option value="Department 1">Department 1</option>
                        <option value="Department 2">Department 2</option>
                        <option value="Department 3">Department 3</option>
                    </select>
                    <!-- <div class="validate"></div> -->
                </div>*@
                <!-- doctor -->
                <div class="col-md-4 form-group mt-3">
                    <select name="doctor" id="doctor" class="form-select">
                        <option value="">Select Doctor</option>
                        <option value="Dr Shagufta">Dr Shagufta </option>
                        <option value="Dr Farzana">Dr Farzana </option>
                        <option value="Dr Maryam">Dr Maryam </option>
                    </select>
                    <!-- <div class="validate"></div> -->
                </div>
            </div>
            <!-- <div class="form-group mt-3">
                <textarea class="form-control" name="message" rows="5" placeholder="Message (Optional)"></textarea>
                <div class="validate"></div>
            </div> -->
            <div class="mb-3">
                @*<div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message"></div>*@
            </div>
            <div class="text-center"><input type="submit" value="Make an Appointment"></div>
        </form>
        
    </div>
</section>
<!-- End Appointment -->

